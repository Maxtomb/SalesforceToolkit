            <groupId>enterprise_client</groupId>
            <artifactId>enterprise_client</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>metadata_client</groupId>
            <artifactId>metadata_client</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>partner_client</groupId>
            <artifactId>partner_client</artifactId>
            <version>1.0</version>
        </dependency>
    	<dependency>
            <groupId>WSC</groupId>
            <artifactId>force-wsc</artifactId>
            <version>38.0.0</version>
        </dependency> -->
    	<dependency>
            <groupId>enterprise_client</groupId>
            <artifactId>enterprise_client</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/enterprise_client.jar</systemPath>
        </dependency>
    	<dependency>
            <groupId>force-wsc-38.0.0</groupId>
            <artifactId>force-wsc-38.0.0</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/force-wsc-38.0.0.jar</systemPath>
        </dependency>
    	
    	<dependency>
            <groupId>metadata_client</groupId>
            <artifactId>metadata_client</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/metadata_client.jar</systemPath>
        </dependency>
    </dependencies>
        
    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                  <source>1.7</source>
                  <target>1.7</target>
                  <encoding>UTF-8</encoding>
                  <compilerArguments>
                   <extdirs>${project.basedir}/lib</extdirs>
                  </compilerArguments>
              	</configuration>
            </plugin>
        </plugins>
    </build>
    
    <repositories>
        <repository>
            <id>spring-releases</id>
            <url>https://repo.spring.io/libs-release</url>
        </repository>
        <repository>
		    <id>in-project</id>
		    <name>In Project Repo</name>
		    <url>file://${project.basedir}/lib</url>
		</repository>
    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <id>spring-releases</id>
            <url>https://repo.spring.io/libs-release</url>
        </pluginRepository>
    </pluginRepositories>
</project>
